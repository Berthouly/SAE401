{% block head %}
<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link href="{{ asset('css/style2.css') }}" rel="stylesheet"/>
    <script src="{{ asset('js/hide-pass-regis.js') }}"></script>

    {# <title>{% block title %}Code Names {% endblock %}</title> #}
{% endblock %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="section_connexion">
            <div class="container_connexion">
                <h1 class="title_connexion">{{ 'S\'inscrire'|trans }} </h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.email) }}
        <div class="login_box">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        {{ form_row(registrationForm.agreeTerms) }}
        <p>{{ 'Accepter les termes'|trans }}</p>

        <button type="submit" class="inscription_button">{{ 'Se connecter'|trans }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
