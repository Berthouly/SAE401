<head>
    <meta charset="UTF-8">
   <title>{{ 'Réinitialiser votre mot de passe'|trans }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ asset('css/style_reset_password.css') }}" rel="stylesheet"/>

</head>

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{ 'Réinitialiser votre mot de passe'|trans }}</h1>

    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
        <div>
            <small>
                {{ 'Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.'|trans }}
            </small>
        </div>

        <button class="btn btn-primary">{{ 'Envoyer un courriel de réinitialisation du mot de passe'|trans }}</button>
    {{ form_end(requestForm) }}
{% endblock %}
